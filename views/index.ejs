                                    Declined: <input type="radio" name="Attending" value="button2">
                                    Undecided: <input type="radio" name="Attending" value="button3">
                                    <input type="submit" value="Update Event"/>

                                </form>
                                <button ng-click="main.deleteEvent(event._id)">Delete</button>
                            </div>
                        </ul>
